  "curl_commands": {
    "example_1_air_conditioner": "curl -X POST http://localhost:8000/api/gaze/click -H 'Content-Type: application/json' -d '{\"user_id\":\"user_123\",\"session_id\":\"session_001\",\"clicked_device\":{\"device_id\":\"ac_living_room\",\"device_type\":\"air_conditioner\",\"device_name\":\"거실 에어컨\",\"display_name\":\"에어컨\",\"capabilities\":[\"on_off\",\"temperature\",\"mode\"],\"current_state\":{\"is_on\":false,\"temperature\":24}}}'",
