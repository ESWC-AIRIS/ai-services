{
  "examples": [
    {
      "name": "에어컨 클릭 - 꺼진 상태",
      "description": "오후 시간에 꺼져있는 에어컨을 클릭한 경우",
      "request": {
        "user_id": "user_123",
        "session_id": "session_001",
        "clicked_device": {
          "device_id": "ac_living_room",
          "device_type": "air_conditioner",
          "device_name": "거실 에어컨",
          "display_name": "에어컨",
          "capabilities": ["on_off", "temperature", "mode", "fan_speed"],
          "current_state": {
            "is_on": false,
            "temperature": 24,
            "mode": "cool",
            "fan_speed": "auto"
          }
        },
        "context": {
          "location": "living_room",
          "outdoor_temperature": 32,
          "time_of_day": "afternoon"
        }
      },
      "expected_recommendation": {
        "intent": "turn_on_ac",
        "confidence": "> 0.8",
        "prompt_text_contains": ["에어컨", "켜시겠습니까"],
        "action": {
          "command": "turn_on",
          "parameters_should_include": ["temperature", "mode"]
        }
      }
    },
    {
      "name": "조명 클릭 - 켜진 상태",
